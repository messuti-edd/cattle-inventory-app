<% @br = ["Usuarios", "Listado"] %>

<table class="table table-bordered table-striped">
  <tr>
    <th>Nombre</th>
    <th>Tipo</th>
    <th>Mail</th>
    <th>Username</th>
    <th>Pass</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nombre %></td>
    <td><%= user.user_type.nombre %></td>
    <td><%= user.mail %></td>
    <td><%= user.username %></td>
    <td><%= user.pass %></td>
    <td><%= link_to 'Ver', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Usuario', new_user_path, class: :btn %>
