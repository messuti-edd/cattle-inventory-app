<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <title><%=h yield(:title).length > 0 ? yield(:title)+" | " : "" %>Gesti&oacute;n Ganadera</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="/stylesheets/bootstrap/bootstrap.css" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
      .nav-list {
        font-size: 1.2em;
      }
      .nav-list .nav-header {
        font-size: 0.8em;
      }
      .table th {
        background-color: #08C !important;
        color: white !important;
      }
    </style>
    <link href="/stylesheets/bootstrap/bootstrap-responsive.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <!-- <link rel="shortcut icon" href="../assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png"> -->
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Ganadería HN</a>
          <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> <%= current_user.nombre%>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <!-- <li><a href="#">Perfil</a></li>
              <li class="divider"></li> -->
              <li><a href="/logout">Salir</a></li>
            </ul>
          </div>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="/">Inventario</a></li>
              <li><a href="#">Proveedores</a></li>
              <!-- <li><a href="#contact">Ayuda</a></li> -->
            </ul>
          </div><!--/.nav-collapse -->
          <ul class="nav">
            <li><a href="#" id="hide-menu"><i class="icon-minus-sign icon-white"></i> <span>Esconder Menú</span></a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li <%= nav_sel("home") %>><a href="/"><i style="margin-top: 3px;" class="icon-home"></i> Inicio</a></li>
              <li class="nav-header">Acciones</li>
              <li <%= nav_sel("in_eg_new") %>><a href="/ingreso-egreso/new">Ingresos/Egresos</a></li>
              <li <%= nav_sel("mov_new") %>><a href="/movimiento/new">Movimientos</a></li>
              <li <%= nav_sel("rec_new") %>><a href="/recuento/new">Recuentos</a></li>
              <li class="nav-header">Listados</li>
              <li <%= nav_sel("in_eg_list") %>><a href="/ingreso-egreso/list">Ingresos/Egresos</a></li>
              <li <%= nav_sel("mov_list") %>><a href="/movimiento/list">Movimientos</a></li>
              <li <%= nav_sel("rec_list") %>><a href="/recuento/list">Recuentos</a></li>
              <li <%= nav_sel("mov_tipos_list") %>><a href="/movimientos_tipos">Tipos de Movimientos</a></li>
              <li class="nav-header">Reportes</li>
              <li><a href="#">General</a></li>
              <li <%= nav_sel("rep_inv_mensual") %>><a href="/reports/inventario_mensual">Inventario</a></li>
              <li class="nav-header">Configuración</li>
              <li <%= nav_sel("config_gestion") %>><a href="/gestions">Gestión</a></li>
              <li><a href="#">General</a></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span10">
          <ul class="breadcrumb">
            <% if @br == nil %>
              <li>
                <a href="#">Inicio</a>
              </li>
            <% else %>
              <% @br.each_with_index do |b, i| %>
                <li><a href='#'><%= b %></a></li> 
                <% unless i+1 >= @br.size %><span class='divider'>/</span> <% end %>
              <% end %>
            <% end %>
            
          </ul>
          <div id='content'>
            <%= yield %>
          </div>
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Anferth 2012</p>
      </footer>

    </div><!--/.fluid-container-->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag "jquery-1.7.1.min.js" %>
    <%= javascript_include_tag "jquery.cookie.js" %>
    <%= javascript_include_tag "movimientos.js" %>
    <script type="text/javascript">var $j = jQuery;</script>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

    <script src="/javascripts/bootstrap/bootstrap-transition.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-alert.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-modal.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-dropdown.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-scrollspy.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-tab.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-tooltip.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-popover.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-button.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-collapse.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-carousel.js"></script>
    <script src="/javascripts/bootstrap/bootstrap-typeahead.js"></script>

  </body>
</html>
