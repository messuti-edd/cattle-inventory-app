<% content_for :title, "Listado de Movimientos" %>

<table class="table table-bordered table-striped">
	<tr>
		<th>Raz√≥n</th>
		<% if @type == "mov" %>
			<th>Desde</th>
			<th>Hasta</th>
		<% else%>
			<th>Predio</th>
		<% end%>
		<th>Fecha</th>
		<th>Detalle</th>
		<th></th>
	</tr>
	
	<% @movs.each do |mov| %>
	<tr>
		<td><%= mov.movimientos_tipo.nombre unless mov.movimientos_tipo.nil?%></td>
		<td><%= mov.predio.nombre%></td>
		<% if @type == "mov" %>
			<td><%= mov.predio_sec.nombre%></td>
		<% end%>
		<td><%= mov.fecha%></td>
		<td><%= mov.detalle%></td>
		<td><%= link_to "Ver", mov%> | <%= link_to "Editar", edit_movimiento_path(mov)%></td>
	</tr>
	<% end %>

</table>